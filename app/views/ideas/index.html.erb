<div>
  <div>
    <h1>
      List of all ideas
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new idea
    </h2>

    <form action="/insert_idea" method="post">
      <div>
        <label for="idea_name_box">
          Idea name
        </label>

        <input type="text" id="idea_name_box" name="query_idea_name">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="idea_image_box">
          Idea image
        </label>

        <input type="text" id="idea_image_box" name="query_idea_image">
      </div>

      <div>
        <input type="checkbox" id="post_status_box" name="query_post_status" value="1">

        <label for="post_status_box">Post status</label>
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <button>
        Create idea
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Idea name
        </th>

        <th>
          Description
        </th>

        <th>
          Idea image
        </th>

        <th>
          Post status
        </th>

        <th>
          Likes count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_ideas.each do |an_idea| %>
      <tr>
        <td>
          <%= an_idea.id %>
        </td>

        <td>
          <%= an_idea.idea_name %>
        </td>

        <td>
          <%= an_idea.description %>
        </td>

        <td>
          <%= an_idea.idea_image %>
        </td>

        <td>
          <%= an_idea.post_status %>
        </td>

        <td>
          <%= an_idea.likes_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_idea.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_idea.updated_at) %> ago
        </td>

        <td>
          <a href="/ideas/<%= an_idea.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
